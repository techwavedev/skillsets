{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Example configuration template for skills",
  
  "skill_name": "example-skill",
  "version": "1.0.0",
  
  "defaults": {
    "greeting_style": "casual",
    "output_format": "json",
    "pretty_print": true
  },
  
  "scripts": {
    "greet": {
      "enabled": true,
      "default_args": {
        "style": "casual"
      }
    },
    "calculate": {
      "enabled": true,
      "precision": 2
    },
    "format_data": {
      "enabled": true,
      "default_format": "json"
    }
  },
  
  "logging": {
    "level": "INFO",
    "format": "json"
  }
}
